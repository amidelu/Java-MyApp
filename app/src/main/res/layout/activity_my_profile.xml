<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true"
        tools:context=".MyProfile">

        <ImageView
            android:id="@+id/profileImageId"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:contentDescription="@string/profile_image"
            android:src="@drawable/profile" />

        <TextView
            android:id="@+id/profileNameId"
            style="@style/textStyleTheme"
            android:layout_gravity="center"
            android:text="@string/profile_name" />

        <TextView
            android:id="@+id/editTextMainHeadingId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/secondaryTextColor"
            android:layout_marginBottom="10dp"
            android:text="@string/fill_information"
            android:textSize="20sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/secondaryLightColor"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>

        <android.support.design.widget.TextInputLayout
            style="@style/editTextStyle">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/usernameEditId"
                style="@style/editTextStyle"
                android:hint="@string/username"
                android:inputType="text"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            style="@style/editTextStyle">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/recoveryEmailEditId"
                style="@style/editTextStyle"
                android:hint="@string/recovery_email"
                android:inputType="textEmailAddress"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            style="@style/editTextStyle">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/fatherEditId"
                style="@style/editTextStyle"
                android:hint="@string/father_name"
                android:inputType="text"/>

        </android.support.design.widget.TextInputLayout><android.support.design.widget.TextInputLayout
            style="@style/editTextStyle">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/motherEditId"
                style="@style/editTextStyle"
                android:hint="@string/mother_name"
                android:inputType="text"/>

        </android.support.design.widget.TextInputLayout><android.support.design.widget.TextInputLayout
            style="@style/editTextStyle">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/nationalityEditId"
                style="@style/editTextStyle"
                android:hint="@string/nationality"
                android:inputType="text"/>

        </android.support.design.widget.TextInputLayout><android.support.design.widget.TextInputLayout
            style="@style/editTextStyle">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/heightEditId"
                style="@style/editTextStyle"
                android:hint="@string/height"
                android:inputType="numberDecimal"/>

        </android.support.design.widget.TextInputLayout><android.support.design.widget.TextInputLayout
            style="@style/editTextStyle">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/weightEditId"
                style="@style/editTextStyle"
                android:hint="@string/weight"
                android:inputType="number"/>

        </android.support.design.widget.TextInputLayout><android.support.design.widget.TextInputLayout
            style="@style/editTextStyle">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/hobbyEditId"
                style="@style/editTextStyle"
                android:hint="@string/hobby"
                android:inputType="text"/>

        </android.support.design.widget.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_margin="10dp"
            android:text="@string/privacy"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/saveBtnId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/save"
                android:padding="5dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/roundedbuttongreen"
                android:drawableStart="@drawable/save"/>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/resetBtnId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/reset"
                android:padding="5dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:layout_toEndOf="@+id/saveBtnId"
                android:background="@drawable/roundedbuttonblue"
                android:drawableStart="@drawable/reset"/>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/cancelBtnId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cancel"
                android:padding="5dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:layout_toEndOf="@+id/resetBtnId"
                android:background="@drawable/roundedbuttonred"
                android:drawableStart="@drawable/cancel"/>


        </RelativeLayout>

    </LinearLayout>

</ScrollView>